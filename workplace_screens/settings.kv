<SettingsScreen@Screen>:
    name: 'settings_screen'
    canvas.before:
        Color:
            rgba: DM_MAIN_COLOR
        Rectangle:
            pos: 0,0
            size: 10000, 10000
    ScrollView:
        do_scroll_y: True
        do_scroll_x: False
        ContainerStackLayout:
            size_hint: 1, None
            height: 1000
            SettingsLabel:
            SettingsElement:
                InfoLabelSettings:
                    text: 'Enable workspace functionality'
                StatusToggleButton:
                    id: togg1
                    on_press: self.on_toggled(self, 'activation_state')
                    font_size: max(15, self.width / 10)
                    size_hint: .6, 1
            SettingsElement:
                InfoLabelSettings:
                    text: 'Enable workspace notifications'
                StatusToggleButton:
                    id: togg2
                    on_press: self.on_toggled(self, 'notifications_state')
                    font_size: max(15, self.width / 10)
                    size_hint: .6, 1
            BoxLayout:
                canvas.before:
                    Color:
                        rgba: BG_COLOR
                    Line:
                        points: self.x, self.y - 20, self.width, self.y - 20
                        width: 1
                size_hint_x: 1
                size_hint_y: None
                spacing: 25
                InfoLabelSettings:
                    text: 'Delete workspace (PERMANENTLY)'
                DeleteWorkspaceButton:
                    size_hint_x: .6
            SettingsLabel:
                text: 'Contact us'
            SettingsElement:
                orientation: 'vertical'
                InfoLabelSettings:
                    text: 'Szymon Marciniak - szymonmarciniak22@gmail.com\nMiłosz Mikołajczyk - binarbeta@gmail.com'


<InfoLabelSettings@Label>:
    font_size: max(13, min(42, self.width / 16))
<ContainerStackLayout@StackLayout>:
    orientation: 'tb-lr'
    cols: 1
    spacing: 25
    padding: .07 * root.width, 25

<SettingsElement@BoxLayout>:
    size_hint_x: 1
    size_hint_y: None
    spacing: 25

<SettingsLabel@Label>:
    size_hint_x: 1
    size_hint_y: None
    height: 150
    markup: True
    font_name: 'Lato'
    text: 'Settings'
    font_size: self.width / 14

<DeleteWorkspaceButton>:
    markup: True
    font_name: 'Lato'
    background_color: [0,0,0,0]
    background_normal: ''
    background_down: ''
    font_size: max(15, self.width / 10)
    text: '%s Remove' % icon('zmdi-delete')
    canvas.before:
        Color:
            rgba: ERROR_COLOR
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: 15,15,15,15
